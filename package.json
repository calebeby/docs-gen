{
  "name": "pgrn-doc",
  "version": "0.0.0",
  "license": "MIT",
  "bin": {
    "pgrn-doc": "./cli.js"
  },
  "dependencies": {
    "chokidar": "^2.0.3",
    "pkg-dir": "^2.0.0",
    "ts-jest": "^22.4.6",
    "ts-simple-ast": "^11.2.0",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "files": [
    "./cli.js",
    "./dist"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "prepublishOnly": "yarn build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.49",
    "@babel/plugin-transform-typescript": "^7.0.0-beta.49",
    "@types/chokidar": "^1.7.5",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.3",
    "jest": "^23.1.0",
    "prettier": "^1.13.3"
  }
}
