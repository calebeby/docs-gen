{
  "name": "pgrn-doc",
  "version": "0.0.0",
  "license": "MIT",
  "bin": {
    "pgrn-doc": "./cli.js"
  },
  "dependencies": {
    "chokidar": "2.0.4",
    "pkg-dir": "3.0.0",
    "ts-jest": "23.10.3",
    "ts-simple-ast": "17.0.0",
    "typescript": "3.0.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "files": [
    "cli.js",
    "dist"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-lint": "eslint --ext .js,.ts . && prettier --list-different --ignore-path .gitignore '**/*.{j,t}s'",
    "lint": "eslint --ext .js,.ts --fix . && prettier --write --ignore-path .gitignore '**/*.{j,t}s'",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "jest": {
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "/dist"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-transform-modules-commonjs": "7.1.0",
    "@babel/plugin-transform-typescript": "7.1.0",
    "@types/chokidar": "1.7.5",
    "@types/jest": "23.3.3",
    "@types/node": "10.11.4",
    "@types/prettier": "1.13.2",
    "eslint": "5.6.1",
    "eslint-plugin-caleb": "1.8.0",
    "jest": "23.6.0",
    "prettier": "1.14.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:caleb/recommended",
      "plugin:caleb/jest"
    ]
  }
}
