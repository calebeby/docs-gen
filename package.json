{
  "name": "pgrn-doc",
  "version": "0.0.0",
  "license": "MIT",
  "bin": {
    "pgrn-doc": "./cli.js"
  },
  "dependencies": {
    "chokidar": "3.5.3",
    "pkg-dir": "6.0.1",
    "ts-simple-ast": "21.0.4",
    "typescript": "4.7.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "files": [
    "cli.js",
    "dist"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-lint": "eslint --ext .js,.ts . && prettier --list-different --ignore-path .gitignore '**/*.{j,t}s'",
    "lint": "eslint --ext .js,.ts --fix . && prettier --write --ignore-path .gitignore '**/*.{j,t}s'",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "jest": {
    "transform": {
      ".+\\.tsx?$": "babel-jest"
    },
    "modulePathIgnorePatterns": [
      "/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@babel/plugin-transform-modules-commonjs": "7.2.0",
    "@babel/plugin-transform-typescript": "7.2.0",
    "@types/chokidar": "1.7.5",
    "@types/jest": "28.1.3",
    "@types/node": "16.11.41",
    "@types/prettier": "2.6.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "28.1.1",
    "eslint": "8.18.0",
    "eslint-plugin-caleb": "11.0.0",
    "jest": "28.1.1",
    "prettier": "2.7.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:caleb/recommended",
      "plugin:caleb/jest"
    ]
  },
  "engines": {
    "node": ">=8"
  }
}
