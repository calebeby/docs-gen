{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "target": "es2015",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/*.ts", "types.d.ts"],
  "exclude": ["src/*.test.ts"]
}
